pipeline {
    agent any

    environment {
        FLUTTER_PATH = 'C:/Users/vinub/Downloads/flutter_windows_3.29.3-stable/flutter/bin'
        PATH = "${env.PATH};${env.FLUTTER_PATH}"
    }

    stages {
        stage('Checkout') {
            steps {
                git branch: 'main', url: 'https://github.com/Vinu-ms/devops_project.git'
            }
        }

        stage('Flutter Doctor') {
            steps {
                bat 'flutter doctor -v'
            }
        }

        stage('Get Dependencies') {
            steps {
                dir('movie_rating_app') {  // Adjust if your pubspec.yaml is inside this folder
                    bat '''
                    flutter clean
                    flutter pub get
                    '''
                }
            }
        }

        stage('Run Tests') {
            steps {
                dir('movie_rating_app') {
                    bat 'flutter test'
                }
            }
        }

        stage('Build APK') {
            steps {
                dir('movie_rating_app') {
                    bat 'flutter build apk --release'
                }
            }
        }

        stage('Archive APK') {
            steps {
                archiveArtifacts artifacts: 'movie_rating_app\\build\\app\\outputs\\flutter-apk\\app-release.apk', fingerprint: true
            }
        }
    }

    post {
        success {
            echo '✅ Flutter build completed successfully!'
        }
        failure {
            echo '❌ Build failed. Check logs for details.'
        }
    }
}
